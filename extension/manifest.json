{
	"manifest_version": 3,
	"name": "KarmaFarma",
	"description": "Win all arguments or just farm a new reddit account. Get AI comments that match the post vibe and content.",
	"version": "1.0",
	"icons": {
		"16": "icons/icon.png",
		"32": "icons/icon.png",
		"48": "icons/icon.png",
		"128": "icons/icon.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_icon": {
			"16": "icons/icon.png",
			"32": "icons/icon.png",
			"48": "icons/icon.png",
			"128": "icons/icon.png"
		},
		"default_title": "KarmaFarma",
		"default_popup": "popup.html"
	},
	"permissions": ["tabs", "activeTab", "sidePanel", "storage"],
	"content_scripts": [
		{
			"js": ["./content.js"],
			"matches": ["*://reddit.com/*"],
			"run_at": "document_end"
		}
	],
	"side_panel": {
		"default_path": "sidepanel.html",
		"default_title": "KarmaFarma Sidebar",
		"default_panel": "sidebar.html",
	"stylesheets": ["sidepanel.css"]
	},
	"host_permissions": ["https://api.openrouter.ai/*"]
	
}
